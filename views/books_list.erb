<h1>Books</h1>

<% if @user == "admin" %>
  <p><a href="/book/add">Add a Book</a></p>
<% end %>

<% if @books.any? %>
  <ul>
    <% @books.each do |book| %>
      <li>
        <a href="/<%= @user %>/books/<%= book.id %>"><%= book.title %></a>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>There are currently no books.</p>
<% end %>

<% if @user == "admin" %>
  <a href="/admin"><button type="button" class="btn">Admin Portal</button></a>
<% else %>
  <a href="/patron/patrons/<%= @user %>"><button type="button" class="btn">User Home</button></a>
<% end %>
<a href="/"><button type="button" class="btn">Home</button></a>
